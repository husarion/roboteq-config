	setcommand(_VAR, 7, (getvalue(_FF, 1) or (flags << 16))) 'Setting fault codes as user variables
	setcommand(_VAR, 8, (getValue(_FM, 1) + (getValue(_FM, 2) << 8))) 
	
	if getValue(_FF, 1 ) > 0 or flags > 0 then
		setconfig(_DOL, 4, 0) 'set output level of DOUT4
	else
		setConfig(_DOL, 4, 1)
	end if
	
