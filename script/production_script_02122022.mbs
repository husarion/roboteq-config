	enc1 = getvalue(_C, 1)
	enc2 = getvalue(_C, 2)
	setcommand(_VAR, 1, enc1) 'Setting encoder values as user variables
	setcommand(_VAR, 2, enc2)
	
	speed1 = getvalue(_S, 1)
	speed2 = getvalue(_S, 2)
	setcommand(_VAR, 3, speed1) 'Setting speed values as user variables
	setcommand(_VAR, 4, speed2)
	
	curr1 = getvalue(_A, 1)
	curr2 = getvalue(_A, 2)
	setcommand(_VAR, 5, curr1) 'Setting current values as user variables
	setcommand(_VAR, 6, curr2)
	
